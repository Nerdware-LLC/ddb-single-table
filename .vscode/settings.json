{
  "editor.codeActionsOnSave": { "source.fixAll.eslint": "explicit" },
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "eslint.codeActionsOnSave.mode": "all",
  "eslint.codeActionsOnSave.rules": ["!prefer-const", "*"], // When I say `let`, I mean `let`!
  "eslint.format.enable": false,

  "markdownlint.config": {
    "MD024": { "siblings_only": true }
  },

  "search.exclude": { "package-lock.yaml": true, "**/CHANGELOG.md": true },

  "typescript.tsdk": "node_modules/typescript/lib",

  "vsicons.associations.files": [
    // https://github.com/vscode-icons/vscode-icons/blob/master/src/iconsManifest/supportedExtensions.ts
    {
      "icon": "tsconfig",
      "extensions": [],
      "filenamesGlob": ["tsconfig", "tsconfig.build-cjs", "tsconfig.build-esm"],
      "extensionsGlob": ["json"],
      "filename": true,
      "format": "svg"
    },
    {
      "icon": "vitest",
      "filenamesGlob": ["vitest.config", "vitest.setup"],
      "extensions": [],
      "extensionsGlob": ["ts"],
      "filename": true,
      "languages": ["vitestsnapshot"],
      "format": "svg"
    }
  ]
}
